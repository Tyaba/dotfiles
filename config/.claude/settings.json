// ref: https://docs.claude.com/ja/docs/claude-code/settings
{
    "permissions": {
        "allow": [
            "Bash(uv sync)",
            "Bash(mise run vet)",
            "Read(*)"
        ],
        "deny": [
            "Read(*/.env)",
            "Read(*credentials.json)",
            "Read(./secrets/**)"
        ]
    },
    "env": {
        "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
        "OTEL_METRICS_EXPORTER": "otlp"
    },
    "includeCoAuthoredBy": false,
    "model": "claude-sonnet-4-5-20250929",
    "hooks": {
        "Stop": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "if [ \"$(uname)\" = \"Darwin\" ]; then afplay /System/Library/Sounds/Submarine.aiff; else paplay /usr/share/sounds/freedesktop/stereo/complete.oga; fi"
                    }
                ]
            }
        ]
    }
}