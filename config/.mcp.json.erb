{
  "mcpServers": {
    "context7": {
      "command": "<%= ENV['HOME'] %>/.local/share/mise/shims/npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "kiri": {
      "command": "<%= ENV['HOME'] %>/.local/share/mise/shims/npx",
      "args": [
        "kiri-mcp-server@latest",
        "--repo",
        ".",
        "--db",
        ".kiri/index.duckdb",
        "--watch"
      ]
    },
    "git": {
      "command": "uvx",
      "args": ["mcp-server-git"]
    },
    "playwright": {
      "command": "<%= ENV['HOME'] %>/.local/share/mise/shims/npx",
      "args": [
        "-y",
        "@playwright/mcp@latest"
      ]
    },
    "notion": {
      "type": "http",
      "url": "https://mcp.notion.com/mcp"
    },
    "slack": {
      "type": "http",
      "url": "https://mcp.slack.com/mcp"
    },
    "memory": {
      "command": "<%= ENV['HOME'] %>/.local/share/mise/shims/npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "<%= ENV['HOME'] %>/ghq/github.com/Tyaba/vault/mcp_server_memory/memory.jsonl"
      }
    }<% if ENV['OBSIDIAN_API_KEY'] %>,
    "obsidian-mcp": {
      "command": "<%= ENV['HOME'] %>/ghq/github.com/Tyaba/vault/.obsidian/plugins/mcp-tools/bin/mcp-server",
      "env": {
        "OBSIDIAN_API_KEY": "<%= ENV['OBSIDIAN_API_KEY'] %>"
      }
    }<% end %>
  }
}

