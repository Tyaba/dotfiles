{
  "mcpServers": {
    "context7": {
      "command": "<%= ENV['HOME'] %>/.local/share/mise/shims/npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "kiri": {
      "command": "<%= ENV['HOME'] %>/.local/share/mise/shims/npx",
      "args": [
        "kiri-mcp-server@latest",
        "--repo",
        ".",
        "--db",
        ".kiri/index.duckdb",
        "--watch"
      ]
    },
    "sequential-thinking": {
      "command": "<%= ENV['HOME'] %>/.local/share/mise/shims/npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "git": {
      "command": "uvx",
      "args": ["mcp-server-git"]
    },
    "playwright": {
      "command": "<%= ENV['HOME'] %>/.local/share/mise/shims/npx",
      "args": [
        "-y",
        "@playwright/mcp@latest"
      ]
    }<% if ENV['OBSIDIAN_API_KEY'] %>,
    "obsidian-mcp": {
      "command": "/Users/s17536/ghq/github.com/Tyaba/vault/.obsidian/plugins/mcp-tools/bin/mcp-server",
      "env": {
        "OBSIDIAN_API_KEY": "<%= ENV['OBSIDIAN_API_KEY'] %>"
      }
    }<% end %>
  }
}

