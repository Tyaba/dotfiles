alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias g="git"
alias s="git status -sb"

# replace
# bat replaces cat
alias cat="bat"
# rip grep replaces grep
alias grep="rg"
# exa replaces ls
alias ls="exa"
# procs replaces ps
alias ps="procs"
# fd replaces find
alias find="fd"
# bottom replaces top
alias top="btm"
# dust replaces du
alias du="dust"
# クリップボードコピー/ペースト
alias pbcopy="xclip -selection clipboard"
alias pbpaste="xclip -selection c -o"

# in short
# lazydocker
alias lzd="lazydocker"
# terraform
alias tf="terraform"
# gcloud
alias gcurl='curl --header "Authorization: Bearer $(gcloud auth print-identity-token)"'
# Docker
alias d=docker
# cargo-script
alias rust="cargo-script"
# python3 == python
alias python3="python"